	//version:String->integer Scanner BufferedReader
	public static void plusFunction() throws IOException{
		int num,sum=0;
		String a;
		
		/*
		Scanner scan = new Scanner(System.in);
		a = scan.nextLine();
		*/
		
		BufferedReader br = new BufferedReader(new InputStreamReader(System.in));
		a = br.readLine();
		
		//num = Integer.parseInt(a);
		num = Integer.valueOf(a);
		while(num>0) {
			sum += num%10;
			num /= 10;
		}
		System.out.println(sum);
	}
	
}
