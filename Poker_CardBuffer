public class CardBuffer{
	private String chBuffer;
	private boolean empty=true;
	public synchronized void put(String ch) {
		while(!empty) {
			try {
				wait();
			}catch(InterruptedException e) {
				e.printStackTrace();
			}
		}
		notify();
		chBuffer = ch;
		empty = false;
	}
	public synchronized String get() {
		while(empty) {
			try {
				wait();
			}catch(InterruptedException e) {
				e.printStackTrace();
			}
		}
		notify();
		String chr = chBuffer;
		chBuffer = "\0";
		empty = true;
		return chr;
	}
}
