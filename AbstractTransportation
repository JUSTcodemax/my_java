package abstractTransportation;

import java.io.*;
import java.util.Scanner;

abstract class AbstractTransportation {
	AbstractTransportation(){
	}
	/*
	String Origin;
	String Destination;
	String Date;
	String Time;
	String Seat;
	String Name;
	String Flight;
	String Bus;
	String Train;
	String Gate;
	String Hall;
	String Class;
	String Fare;
	String Info;
	*/
	public abstract String getInfo();
	
	public static void main(String[] args) {
		String info;
		String choice;
		do {
		System.out.print("Which ride information would you like to view(Plane/Train/Bus):");
		Scanner scanner = new Scanner(System.in);
		choice = scanner.nextLine();
		if(choice.equals("Bus")) {
			AbstractTransportation bus = new Bus();
			info = bus.getInfo();
			System.out.println(info);
		}
		if(choice.equals("Train")) {
			AbstractTransportation train = new Train();
			info = train.getInfo();
			System.out.println(info);
		}
		if(choice.equals("Plane")) {
			AbstractTransportation plane = new Plane();
			info = plane.getInfo();
			System.out.println(info);
		}
		}while(choice.length()!=0);
		System.out.print("----------End of search-----------");
		
	}
	
}

class Bus extends AbstractTransportation{
	String Origin;
	String Destination;
	String Date;
	String Time;
	String Seat;
	String Bus;  //Train number
	String Gate;  //Ticket gate
	String Fare;
	String Info;
	public String getInfo() {
		Info = "Origin:\r\n"
				+ "Destination:\r\n"
				+ "Date:\r\n"
				+ "Time:\r\n"
				+ "Seat:\r\n"
				+ "Bus:\r\n"
				+ "Gate:\r\n"
				+ "Fare:\r\n";
		return Info;
	}
	
}

class Train extends AbstractTransportation{
	String Origin;
	String Destination;
	String Date;
	String Time;
	String Seat;
	String Train;
	String Fare;
	String Info;
	public String getInfo() {
		Info = "Origin:\r\n"
				+ "Destination:\r\n"
				+ "Date:\r\n"
				+ "Time:\r\n"
				+ "Seat:\r\n"
				+ "Train:\r\n"
				+ "Fare:\r\n";
		return Info;
	}
}

class Plane extends AbstractTransportation{
	String Origin;
	String Destination;
	String Date;
	String Time;
	String Seat;
	String Name;
	String Flight;  //Flight number
	String Gate;   //boarding gate
	String Hall;   //Waiting lounge
	String Class;   //cabin seat
	String Info;
	public String getInfo() {
		Info = "Origin:\r\n"
				+ "Destination:\r\n"
				+ "Date:\r\n"
				+ "Time:\r\n"
				+ "Seat:\r\n"
				+ "Name:\r\n"
				+ "Flight:\r\n"
				+ "Gate:\r\n"
				+ "Hall:\r\n"
				+ "Class:\r\n";
		return Info;
	}
}
