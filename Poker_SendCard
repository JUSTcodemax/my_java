import java.util.Random;

public class SendCard extends Thread{
	private CardBuffer cbr;
	Random r = new Random();
	public SendCard(CardBuffer cbr) {
		this.cbr = cbr;
	}
	public void run() {
		for(int i=0;i<=10;i++) {
			for(int j=0;j<4;j++) {
				String ch = String.valueOf(r.nextInt(12)+1);   //get a number from1 to 13,and then do a change 11->J,12->Q,13->K
				if(ch.equals("1")) {
					ch = "A";
				}
				else if(ch.equals("11")) {
					ch = "J";
				}
				else if(ch.equals("12")) {
					ch = "Q";
				}
				else if(ch.equals("13")) {
					ch = "K";
				}
				cbr.put(ch);
				try {
					sleep(100);
				}catch(InterruptedException e) {
					e.printStackTrace();
				}
			}
		}
	}
}
